<%= form_for(@message, html: {class: 'form-horizontal'}) do |f| %>
  <% if @message.errors.present? %>
    <div class="alert alert-danger">
        <%= alert %>
        <ul>
          <% @message.errors.full_messages.each do |full_message| %>
            <li>
              <%= full_message %>
            </li>
          <% end %> 
        </ul>
      </div>
  <% end %>
  
    <div class="form-group">
      <label class="col-sm-1 control-label" for="message_name">名前:</label>
      <div class="col-sm-3">
        <%= f.text_field :name, class:'form-control' %>
      </div>
      <label class="col-sm-1 control-label" for="message_age">年齢:</label>
      <div class="col-sm-2">
        <%= f.text_field :age, class:'form-control' %>
      </div>
      <div class="col-sm-5"></div>
    </div>
    <div class="form-group">
      <label class="col-sm-1 control-label" for="message_body">内容:</label>
      <div class="col-sm-6">
        <%= f.text_area :body, class:'form-control' %>
      </div>
      <div class="colo-sm-4"></div>
    </div>
    <%= f.submit class: "btn btn-sm btn-primary" %>
  <% end %>