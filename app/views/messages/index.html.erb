<div class="panel panel-default">
  <div class="panel-heading">
    メッセージ一覧
  </div>
    
  <div class="panel-body">
    <% @messages.each do |message| %>
      <span class="label label-info"><%= message.name %></span>
      <%= message.body %>
      <br>
    <% end %>
  </div>
</div>

<%= form_for(@message, html: {class: 'form-horizontal'}) do |f| %>
  <div class="form-group">
    <label class="col-sm-1 control-label" for="message_name">名前:</label>
    <div class="col-sm-3">
      <%= f.text_field :name, class:'form-control' %>
    </div>
    <div class="col-sm-8"></div>
  </div>
  <div class="form-group">
    <label class="col-sm-1 control-label" for="message_body">内容:</label>
    <div class="col-sm-5">
      <%= f.text_area :body, class:'form-control' %>
    </div>
    <div class="colo-sm-6"></div>
  </div>
  <%= f.submit class: "btn btn-sm btn-primary" %>
<% end %>